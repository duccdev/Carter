datasource db {
  provider = "postgresql"
  url      = env("PGSQL")
}

generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

model Guild {
  id BigInt @id

  leaderboards Leaderboard[]
  warns        Warn[]

  @@index([id])
  @@map("guilds")
}

model Player {
  id BigInt @id

  leaderboard    Leaderboard @relation(fields: [leaderboard_id], references: [id])
  leaderboard_id String      @unique

  wins Int

  @@index([id, leaderboard_id])
  @@map("players")
}

model Leaderboard {
  id   String @id @default(cuid())
  name String

  guild    Guild  @relation(fields: [guild_id], references: [id])
  guild_id BigInt @unique

  players Player[]

  @@index([id, guild_id])
  @@map("leaderboards")
}

model Warn {
  id String @id @default(cuid())

  member_id  BigInt   @unique
  reason     String
  expires_at DateTime

  guild    Guild  @relation(fields: [guild_id], references: [id])
  guild_id BigInt @unique

  @@index([id, guild_id])
  @@map("warns")
}

model Poll {
  id String @id @default(cuid())

  votes Vote[]

  @@index([id])
  @@map("polls")
}

model Vote {
  id String @id @default(cuid())

  poll    Poll   @relation(fields: [poll_id], references: [id])
  poll_id String @unique

  user_id BigInt @unique
  option  Int

  @@index([id, poll_id, user_id])
  @@map("votes")
}
